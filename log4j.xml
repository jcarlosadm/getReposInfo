<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="main" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %5p %m%n"/>
        </layout>
    </appender>
    
    <appender name="mainFileLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="outputs/logs/app.log" />
       <param name="DatePattern" value="'.'yyyy-MM-dd hh:mm" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %5p %m%n"/>
        </layout>
    </appender>

    <category name="org.repodriller">
        <priority value="INFO"/>
        <appender-ref ref="main"/>
        <appender-ref ref="mainFileLog"/>
    </category>

    <category name="/">
        <priority value="INFO"/>
        <appender-ref ref="main"/>
        <appender-ref ref="mainFileLog"/>
    </category>

</log4j:configuration>